@model Candidate 

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control">
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" type="text" class="form-control">
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" type="text" class="form-control">
    </div>

    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <sup style="font-size: 11px; color:Red;">*min 18 ya≈ü</sup>
        <select asp-for="Age" class="form-select">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
            <option value="25">25</option>
        </select>
    </div>

    <fieldset>
        <legend>Select one course</legend>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="mvc" value="ASP.NET Core MVC" checked>
            <label for="mvc">ASP.NET Core MVC</label>
        </p>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="php" value="PHP PDO">
            <label for="php">PHP PDO</label>
        </p>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="cpp" value="C++ Game Developer">
            <label for="cpp">C++ Game Developer</label>
        </p>
    </fieldset>

    <div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>
